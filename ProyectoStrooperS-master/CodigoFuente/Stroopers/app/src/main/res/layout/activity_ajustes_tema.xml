    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajustes del Tema"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="5dp"/>


